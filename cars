 fill(128,64,48);
      ellipse(i-85,j+335,10,10);
  ellipse(i-25,j+335,10,10);
    ellipse(i+15,j+335,10,10);
  ellipse(i+75,j+335,10,10);
      }
  i+=random(5);
  
  fill(128,64,48);
  rect(i+22,j+250,50,40);
  rect(i+3,j+290,90,50);
  rect(i-10,j+320,15,10);
