}
  }
     class Car{
     float ypos,xpos,shur;
     Car(float y,float x,float s){
       ypos=y;
       xpos=x;
       shur=s;
   }
   void update(){
     xpos+=random(5);
     if(xpos>width){
       
     }
        
  
  
     fill(128,64,48);
  rect(xpos+22,ypos+250,50,40);
  rect(xpos+3,ypos+290,90,50);
  rect(xpos-10,ypos+320,15,10);
  rect(xpos-97,ypos+290,90,50);
  fill(0,191,255);
  rect(xpos+40,ypos+255,30,30);

  
  fill(0);
  ellipse(xpos+15,ypos+335,30,30);
  ellipse(xpos+75,ypos+335,30,30);
  
  triangle(xpos+94,ypos+290,xpos+120,ypos+315,xpos+94,ypos+340);

  
   ellipse(xpos-85,ypos+335,30,30);
  ellipse(xpos-25,ypos+335,30,30);

  rect(xpos+32,ypos+220,10,30);
 fill(128,64,48);
      ellipse(xpos-85,ypos+335,10,10);
  ellipse(xpos-25,ypos+335,10,10);
    ellipse(xpos+15,ypos+335,10,10);
  ellipse(xpos+75,ypos+335,10,10);
  
  
  
    
  }

