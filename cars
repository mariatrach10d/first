Car n1 = new Car(-40,20,30);
Car n2 = new Car(100,20,30);
Car n3 =new Car(300,20,30);
Car n4 = new Car(450,20,30);
void setup(){
size(1000,1000);
}
int i=0;
int j=-200;
void draw(){
  background(204);
   n1.update();
   n2.update();
   n3.update();
   n4.update();
  if(i+40<=1000){
